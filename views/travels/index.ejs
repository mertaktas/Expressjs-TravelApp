<section id="contact" class="d-flex justify-content-center" style="min-height: 70vh;">
    <div class="container">
        <div style="height: 150px; border-bottom: 1px #000 solid;" class="section-content my-4 px-2">
            <h1 class="section-header text-center">Bizimle İrtibata Geçiniz</h1>
            <h4 class="text-center">Lorem Ipsum is simply dummy text of the printing and
                typesetting industry</h3>
        </div>
        <div class="contact-section">
            <div class="container">
                <form>
                    <div class="row mb-4">
                        <form>
                            <div class="col-6 form-line">
                                <div class="form-group my-4">
                                    <label for="exampleInputUsername">Ad Soyad</label>
                                    <input type="text" class="form-control" id="" placeholder="Ad Soyad">
                                </div>
                                <div class="form-group my-4">
                                    <label for="exampleInputEmail">Email</label>
                                    <input type="email" class="form-control" id="exampleInputEmail"
                                        placeholder="Email Giriniz">
                                </div>
                                <div class="form-group my-4">
                                    <label for="telephone">Numara</label>
                                    <input type="tel" class="form-control" id="telephone" placeholder="Numara">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group my-4">
                                    <label for="description">İleti</label>
                                    <textarea cols="30" rows="8" class="form-control" id="description"
                                        placeholder="İletinizi Yazınız"></textarea>
                                </div>
                                <div>

                                    <button type="button" class="btn btn-dark submit float-right"><i
                                            class="fa fa-paper-plane" aria-hidden="true"></i>Gönder</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </form>

            </div>
        </div>


</section>


