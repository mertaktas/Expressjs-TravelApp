<% include ../partials/header %>

<div>
    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-angle-up"></i></button>
</div>
<div id="background" class="jumbotron" style="min-height: 50vh;">
    <div class="container">
        <h1 class="display-3 text-center mt-4">Gezi Rehberi</h1>
        <p class="lead text-center mt-4">Heyecanlı anılarınızı ve çektiğiniz gezi fotoğraflarını
            paylaşabilirsiniz.</p>
        <p class="lead text-center mt-4">Ayrıca gezerken tanık olduğunuz anıları da paylaşmayı unutmayın.</p>
        <p class="lead text-center mt-4">Siz de kayıt olarak aramıza katılabilirsiniz.</p>

        <hr class="hr-jum">
        <p class="text-center mt-4 mb-4">Hadi acele et seni bekliyoruz.</p>
        <p class="lead text-center">
            <a class="btn btn-primary btn-lg" href="#geziler" role="button">Devam Et</a>
        </p>
    </div>

</div>

<section id="geziler">
    <div class="container">
        <h2 class="text-center">Geziler</h2>
        <hr class="my-4">

        <div class="px-4 d-flex justify-content-center">
            <div class="row">
                <% travels.forEach(function(travel){ %>
                <div class="col-4 p-4">
                    <div class="card float-left">
                        <h3 class="card-header text-center"><%= travel.name %></h3>

                        <img style="height: 200px; width: 100%; display: block;" src="<%= travel.image %>"
                            alt="Card image">
                        <div class="card-body">
                            <p class="card-text"><%= travel.description.substring(0, 100) %>....</p>
                        </div>

                        <div class="card-body">
                            <a href="#" class="card-link">#Etiket</a>
                            <a href="#" class="card-link">#Etiket</a>
                        </div>
                        <div class="card-footer text-muted">
                            2 days ago
                        </div>
                        <div>
                            <p>
                                <a type="button" href="/travels/<%= travel._id %>"
                                    class="btn btn-dark card-more d-flex justify-content-center mb-0">Daha
                                    Fazlası</a>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

