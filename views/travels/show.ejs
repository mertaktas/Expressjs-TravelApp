<% include ../partials/header %>

<div class="container">
    <h1>This is the show page</h1>

    <p><%= travel.name %></p>

    <img src="<%= travel.image %>" alt="">

    <p><%= travel.description %></p>
    <p><em>Submitted By : <%= travel.author.username %> </em></p>
    <div>
        <% if(currentUser && travel.author.id && travel.author.id.equals(currentUser._id)){ %>
        <a class="btn btn-warning" href="/travels/<%= travel._id %>/edit">Edit</a>
        <form action="/travels/<%= travel._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger">Delete</button>
        </form>
        <% }%>
        <a class="btn btn-success" href="/travels/<%= travel._id %>/comments/new">Add New Comment</a>
    </div>


    <% travel.comments.forEach(function(comment){ %>
    <p>
        <strong><%= comment.author.username %></strong> - <%= comment.text %>
        <% if(currentUser && comment.author.id && comment.author.id.equals(currentUser._id)){ %>
        <a class="btn btn-xs btn-warning" href="/travels/<%=travel._id %>/comments/<%=comment._id %>/edit">Edit</a>
        <form id="delete-form" action="/travels/<%=travel._id %>/comments/<%=comment._id %>?_method=DELETE"
            method="POST">
            <input type="submit" class="btn btn-xs btn-danger" value="Delete">
        </form>
        <% } %>
    </p>



    <% }) %>

</div>


<% include ../partials/footer %>